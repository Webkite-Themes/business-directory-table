<td colspan="5">
  <ul class="forty">
    {{#facet name="Image"}}<img src="{{displayValue}}"/>{{/facet}}
  </ul>
  <ul class="sixty">
    <li>
    {{#facet name="Category"}}
    {{#if filterable}}
    <b class="inline-filter-button">
      <a class="webkite-toggle" data-target=".{{../../id}}-{{name}}-menu">{{downcase name}}<i></i></a>
      <ul class="{{../../id}}-{{name}}-menu inline-filter-menu webkite-hide webkite-menu">
        {{#each filterableValues}}
        <li><a href="#" class="webkite-add-filter webkite-toggle" data-target=".{{../../../id}}-{{../name}}-menu" data-facet="{{../name}}" data-operator="is" data-value="{{this}}">{{this}}</a></li>
        {{/each}}
      </ul>
    </b>
    {{else}}
    <b>{{downcase name}}</b>
    {{/if}}
    {{#if filterable}}
    <span class="facet-values">
      {{#each values}}
      <a href="#" class="webkite-add-filter" data-facet="{{../name}}" data-operator="is" data-value="{{this}}">{{this}}</a>{{#unless @last}}, <br>{{/unless}}
      {{/each}}
    </span>
    {{else}}
    <span class="facet-values">
      {{displayValue}}
    </span>
    {{/if}}
    {{/facet}}
    </li>
    <li>
    <b>website</b>
    {{#facet name="Website"}}
    <span class="facet-values">
      <a href="{{displayValue}}">{{displayValue}}</a>
    </span>
    {{/facet}}
    </li>
    <li>
    <b>description</b>
    {{#facet name="Description"}}
    <span class="facet-values">
      {{displayValue}}
    </span>
    {{/facet}}
    </li>
    <li>
    <b>address</b>
    <span class="facet-values">
      <a target="_blank" href="http://maps.google.com/?q={{#facet name='Address 1'}}{{displayValue}}{{/facet}} {{#facet name='City'}}{{displayValue}}{{/facet}} {{#facet name='State'}}{{displayValue}}{{/facet}} {{#facet name='Zip Code'}}{{displayValue}}{{/facet}} {{#facet name='Country'}}{{displayValue}}{{/facet}}">
        {{#facet name="Address 1"}}<span>{{displayValue}}</span>{{/facet}}
        {{#facet name="Address 2"}}<span>{{displayValue}}</span>{{/facet}}
        {{#facet name="City"}}<span><span class="city">{{displayValue}}</span>{{/facet}}<span class="state">{{#facet name="State"}}{{displayValue}}</span>{{/facet}}
          {{#facet name="Zip Code"}}{{displayValue}}{{/facet}}</span>
      </a>
    </span>
    </li>
    <li>
    <b>email</b>
    {{#facet name="Email"}}
    <span class="facet-values">
      <a href="mailto:{{displayValue}}">{{displayValue}}</a>
    </span>
    {{/facet}}
    </li>
    <li>
    <b>phone number</b>
    {{#facet name="Phone Number"}}
    <span class="facet-values">
      <a href="tel:{{displayValue}}">{{displayValue}}</a>
    </span>
    {{/facet}}
    </li>
    <li>
    <b>fax number</b>
    {{#facet name="Fax Number"}}
    <span class="facet-values">
      <a href="tel:{{displayValue}}">{{displayValue}}</a>
    </span>
    {{/facet}}
    </li>
    <li>
    <b>facebook</b>
    {{#facet name="Facebook"}}
    <span class="facet-values">
      <a href="{{displayValue}}">{{displayValue}}</a>
    </span>
    {{/facet}}
    </li>
    <li>
    <b>twitter</b>
    {{#facet name="Twitter"}}
    <span class="facet-values">
      <a href="https://twitter.com/{{displayValue}}">{{displayValue}}</a>
    </span>
    {{/facet}}
    </li>
  </ul>
</td><!-- webkite-item-details -->
